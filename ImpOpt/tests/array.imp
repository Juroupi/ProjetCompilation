    var a = malloc(4*4);

    var i = 2, j = 3;
    a[0] = 0;         // a[0]  = 0
    *(a + 4) = 1;     // a[4]  = 1
    a[i * 4] = 2;     // a[8]  = 2
    *(a + j * 4) = 3; // a[12] = 3

